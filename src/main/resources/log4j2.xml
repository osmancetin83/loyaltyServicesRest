<!-- 			<KeyValuePair key="additionalFields" value="{'environment': 'TEST', 'application': 'loyaltyservicestest','test_field':'test_value'}" /> -->
<!-- 		</GELF> -->
	</Appenders>

	<Loggers>
		<Root level="info" includeLocation="true">
			<appender-ref ref="Console" />
		</Root>

		<AsyncLogger name="com.thy.loyaltyServicesRest" includeLocation="true" level="info" additivity="true">
			<appender-ref ref="File-Appender-Info" />
		</AsyncLogger>

		<AsyncLogger name="org.springframework" level="error" additivity="true">
			<appender-ref ref="File-Appender-Error" />
		</AsyncLogger>
	</Loggers>
</Configuration>