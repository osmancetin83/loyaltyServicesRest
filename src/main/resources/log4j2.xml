<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off" shutdownHook="disable" >
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout Pattern="%d{yy-MM-dd HH:mm:ss.SSS} [%t] %-5level %C{1}.%M(%L)
									%marker txID:%X{txID} - sID:%X{sID} - conID:%X{conID} -
									clReqID:%X{clReqID} - %msg%n"/>
		</Console>

		<RollingRandomAccessFile name="File-Appender-Info"
								 fileName="${sys:thy.appdir}/loyaltyServicesRest/log/applog"
								 filePattern="${sys:thy.appdir}/loyaltyServicesRest/log/applog-%d{yyyy-MM-dd-HH}.log"  
								 immediateFlush="false">
			<PatternLayout Pattern="%d{yy-MM-dd HH:mm:ss.SSS} %-5level %marker %C{1}.%M(%L)
									txID:%X{txID} - sID:%X{sID} - conID:%X{conID} - clReqID:%X{clReqID}
									- %msg%n"/>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingRandomAccessFile>

		<RollingRandomAccessFile name="File-Appender-Error"
								 fileName="${sys:thy.appdir}/loyaltyServicesRest/log/error"
								 filePattern="${sys:thy.appdir}/loyaltyServicesRest/log/error-%d{yyyy-MM-dd-HH}.log" 
								 immediateFlush="false">
			<PatternLayout Pattern="%d{yy-MM-dd HH:mm:ss.SSS} [%t] %-5level %marker
									%C{1}.%M(%L) txID:%X{txID} - sID:%X{sID} - conID:%X{conID} -
									clReqID:%X{clReqID} - %msg%n"/>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingRandomAccessFile>
		
